<div class="mt-4">
    <div class="row">
        {{#each news}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <img
                    src="{{ this.image }}"
                    class="card-img-top" alt="...">
                <div class="card-body">
                    <a href="news/{{ this.slug }}">
                        <h5 class="card-title">{{ this.title }}</h5>
                    </a>
                    <p class="card-text">{{ this.body }}</p>
                    <a href="#" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
        {{/each }}
    </div>
</div>
