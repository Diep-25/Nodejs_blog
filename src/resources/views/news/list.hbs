<div class="mt-4 mb-4">
    <div class="container">
        <h3 class="mb-4">List</h3>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Body</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each news}}
                <tr>
                    <th scope="row">{{@key}}</th>
                    <td>{{ this.title }}</td>
                    <td>{{ this.body }}</td>
                    <td>
                        <a href="/news/update?id={{ this._id }}">Update</a>
                        <a href="/news/delete?id={{ this._id }}">Delete</a>
                    </td>
                </tr>
                {{/each  }}
            </tbody>
        </table>
    </div>
</div>